<%- include('partials/header', { title: 'Dashboard - TinyLink' }) %>

<div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">URL Shortener Dashboard</h1>
    <p class="text-gray-600">Create and manage your shortened links</p>
</div>

<!-- Create Link Form -->
<div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">
        <i class="fas fa-plus-circle text-indigo-600 mr-2"></i>Create New Link
    </h2>
    <form id="createLinkForm" class="space-y-4">
        <div>
            <label for="url" class="block text-sm font-medium text-gray-700 mb-2">
                Target URL <span class="text-red-500">*</span>
            </label>
            <input 
                type="url" 
                id="url" 
                name="url" 
                required
                placeholder="https://example.com"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition"
            >
        </div>
        <div>
            <label for="code" class="block text-sm font-medium text-gray-700 mb-2">
                Custom Short Code (Optional)
            </label>
            <input 
                type="text" 
                id="code" 
                name="code" 
                pattern="[A-Za-z0-9]{6,8}"
                placeholder="6-8 alphanumeric characters"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition"
            >
            <p class="mt-1 text-sm text-gray-500">Leave empty to auto-generate</p>
        </div>
        <button 
            type="submit"
            class="w-full bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition font-medium"
        >
            <i class="fas fa-link mr-2"></i>Create Short Link
        </button>
    </form>
    <div id="formMessage" class="mt-4 hidden"></div>
</div>

<!-- Links List -->
<div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">
        <i class="fas fa-list text-indigo-600 mr-2"></i>Your Links
    </h2>
    
    <div id="linksContainer">
        <% if (links && links.length > 0) { %>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Short Code</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Target URL</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Clicks</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% links.forEach(link => { %>
                            <tr class="hover:bg-gray-50 transition">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <a 
                                        href="<%= appUrl %>/<%= link.shortCode %>" 
                                        target="_blank"
                                        class="text-indigo-600 hover:text-indigo-800 font-mono font-medium"
                                    >
                                        <%= link.shortCode %>
                                    </a>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm text-gray-900 truncate max-w-xs">
                                        <%= link.targetUrl %>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                                        <%= link.totalClicks %>
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    <%= new Date(link.createdAt).toLocaleDateString() %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                    <a 
                                        href="/stats/<%= link.shortCode %>"
                                        class="text-indigo-600 hover:text-indigo-900"
                                        title="View Stats"
                                    >
                                        <i class="fas fa-chart-bar"></i>
                                    </a>
                                    <button 
                                        onclick="deleteLink('<%= link.shortCode %>')"
                                        class="text-red-600 hover:text-red-900"
                                        title="Delete"
                                    >
                                        <i class="fas fa-trash"></i>
                                    </button>
                                    <button 
                                        onclick="copyToClipboard('<%= appUrl %>/<%= link.shortCode %>')"
                                        class="text-gray-600 hover:text-gray-900"
                                        title="Copy Link"
                                    >
                                        <i class="fas fa-copy"></i>
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-12">
                <i class="fas fa-link text-gray-300 text-6xl mb-4"></i>
                <p class="text-gray-500 text-lg">No links created yet</p>
                <p class="text-gray-400 text-sm mt-2">Create your first shortened link above</p>
            </div>
        <% } %>
    </div>
</div>

<script>
const appUrl = '<%= appUrl %>';

// Handle form submission
document.getElementById('createLinkForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const form = e.target;
    const formData = new FormData(form);
    const url = formData.get('url');
    const code = formData.get('code') || null;
    
    const messageDiv = document.getElementById('formMessage');
    messageDiv.classList.add('hidden');
    
    try {
        const response = await fetch('/api/links', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ url, code }),
        });
        
        const data = await response.json();
        
        if (response.ok) {
            messageDiv.className = 'mt-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg';
            messageDiv.innerHTML = `
                <strong>Success!</strong> Link created: 
                <a href="${appUrl}/${data.shortCode}" target="_blank" class="font-mono underline">${appUrl}/${data.shortCode}</a>
            `;
            messageDiv.classList.remove('hidden');
            form.reset();
            
            // Reload page after 1 second to show new link
            setTimeout(() => {
                window.location.reload();
            }, 1500);
        } else {
            messageDiv.className = 'mt-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg';
            messageDiv.textContent = `Error: ${data.error || 'Failed to create link'}`;
            messageDiv.classList.remove('hidden');
        }
    } catch (error) {
        messageDiv.className = 'mt-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg';
        messageDiv.textContent = 'Error: Failed to create link. Please try again.';
        messageDiv.classList.remove('hidden');
    }
});

// Delete link
async function deleteLink(code) {
    if (!confirm(`Are you sure you want to delete the link with code "${code}"?`)) {
        return;
    }
    
    try {
        const response = await fetch(`/api/links/${code}`, {
            method: 'DELETE',
        });
        
        if (response.ok || response.status === 204) {
            window.location.reload();
        } else {
            const data = await response.json();
            alert(`Error: ${data.error || 'Failed to delete link'}`);
        }
    } catch (error) {
        alert('Error: Failed to delete link. Please try again.');
    }
}

// Copy to clipboard
function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(() => {
        // Show temporary feedback
        const button = event.target.closest('button');
        const originalHTML = button.innerHTML;
        button.innerHTML = '<i class="fas fa-check text-green-600"></i>';
        setTimeout(() => {
            button.innerHTML = originalHTML;
        }, 1000);
    }).catch(() => {
        alert('Failed to copy to clipboard');
    });
}
</script>

<%- include('partials/footer') %>

